{
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle"   : "block-outline",
  "editor.dragAndDrop"   : false,
  "editor.fontFamily"   : "FuraCode Nerd Font",
  // "editor.fontFamily"   : "UbuntuMono Nerd Font",
  // "editor.fontFamily"   : "Monaco",
  "editor.fontSize"     : 11,
  "editor.letterSpacing": 0,
  "editor.fontLigatures": true,
  "editor.minimap.enabled"            : false,
  "editor.mouseWheelScrollSensitivity": 1.1,
  "editor.renderIndentGuides"         : true,
  "editor.snippetSuggestions"         : "top",
  "emmet.excludeLanguages"         : [
    // "javascript",
    // "javascriptreact"
  ],
  "emmet.includeLanguages": {
    "gohtml": "html",
  },
  "emmet.extensionsPath"           : "",
  "emmet.preferences"              : {},
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab"    : true,
  "explorer.sortOrder"          : "type",
  "explorer.openEditors.visible": 0,
  "extensions.autoUpdate": false,
  "files.exclude": {
      "**/.git"     : true,
      "**/.svn"     : true,
      "**/.hg"      : true,
      "**/CVS"      : true,
      "**/.DS_Store": true,
      "Icon?"       : true,
      "**/tags"       : true,
  },
  "git.autofetch":         true,
  "git.enableSmartCommit": true,
  "git.confirmSync"      : false,
  "diffEditor.ignoreTrimWhitespace": false,
  // "markdown.styles": [
  //     "/Users/clay/Projects/vscode/vscode-custom-markdown-preview/build/vscode-syntax.css",
  //     "/Users/clay/Projects/vscode/vscode-custom-markdown-preview/build/custom-markdown.css"
  // ],
  "terminal.integrated.fontFamily": "UbuntuMono Nerd Font",
  "terminal.integrated.fontSize"  : 12,
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.fontWeight": "100",
  "terminal.integrated.fontWeightBold": "100",
  "files.associations": {
      ".{aliases,path,viminfo}": "shellscript",
      ".env": "properties",
      ".nvimrc": "viml",
      ".ractive": "javascript",
      "*.{jinja,jinja2}": "html",
      "*.tmpl": "gohtml",
      "*.blade": "blade",
      ".postcssrc": "jsonc",
      "Gopkg.lock": "toml",
      ".vscodeignore": "gitignore",
      "*.{jsonc,json5,JSON-tmLanguage}": "jsonc",
  },
  "[markdown]": {
      "editor.wordWrap"        : "off",
      "editor.quickSuggestions": true
  },
  "workbench.startupEditor": "none",
  "workbench.statusBar.feedback.visible": false,
  "vsicons.dontShowNewVersionMessage": true,
  "vsicons.dontShowConfigManuallyChangedMessage": true,
  "go.formatTool": "gofmt",
  "go.buildOnSave": "off",
  "go.useLanguageServer": true,
  "terminal.integrated.env.osx":     {"IN_VSCODE": "1"},
  "terminal.integrated.env.linux":   {"IN_VSCODE": "1"},
  "terminal.integrated.env.windows": {"IN_VSCODE": "1"},
  // === Vim ===
  "vim.disableExtension": false,
  "vim.showcmd": true,
  "vim.useCtrlKeys": true,
  "vim.easymotion":  true,
  "vim.incsearch":   true,
  "vim.hlsearch":    true,
  "vim.useSystemClipboard": false,
  "vim.cmdLineInitialColon": true,
  "vim.statusBarColorControl": false,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.insertModeKeyBindings": [
    {
      "before": ["<c-q>"],
      "after": ["<Esc>"]
    }
  ],
  "vim.otherModesKeyBindingsNonRecursive": [
    {
      "before": ["q"],
      "after": [],
      "commands": [
        {
          "command": "vim",
          "args": []
        },
      ]
    },
    {
      "before": ["q"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.files.save",
          "args": []
        },
        {
          "command": "workbench.action.closeActiveEditor",
          "args": []
        }
      ]
    },
    {
      "before": ["f", "j"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.files.save",
          "args": []
        },
        {
          "command": "workbench.action.closeActiveEditor",
          "args": []
        }
      ]
    },
    {
      "before": ["v", "i", "e"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.selectAll",
          "args": []
        },
      ]
    },
    {
      "before": [","],
      "after": ["i", "<space>", "<esc>"]
    },
    {
      "before": ["<bs>"],
      "after": ["a", "<bs>", "<esc>", "<right>"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["0"]
    },
    {
      "before": ["U"],
      "after": ["<C-r>"]
    },
    {
      "before": ["<leader>", "h", "d", "s"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.inspectTMScopes",
          "args": []
        },
      ]
    },
  ],
  "vim.leader": "<space>",
  "vim.handleKeys":{
    // "<C-a>": false,
    "<C-f>": false,
    "<C-e>": false,
    "x": false,
    // "<C-q>": true
  },
  "workbench.colorCustomizations": {
    "diffEditor.insertedTextBorder": "#608b4e",
    "diffEditor.removedTextBorder": "#d16969",
    "editor.findMatchBackground": "#cc00b1",
    // "editor.findMatchBorder": "#ff0000",
    // "editor.findMatchHighlightBorder": "#6796e6",
    "editorLineNumber.activeForeground": "#608b4e",
    "editor.findMatchHighlightBackground": "#1e1e1e",
    "editorGutter.addedBackground": "#608b4e",
    "editorGutter.modifiedBackground": "#d7ba7d",
    "editorGutter.deletedBackground": "#d16969",
    "editorOverviewRuler.addedForeground": "#608b4e",
    "editorOverviewRuler.modifiedForeground": "#d7ba7d",
    "editorOverviewRuler.deletedForeground": "#d16969",
    "gitDecoration.modifiedResourceForeground": "#608b4e",
    "gitDecoration.deletedResourceForeground": "#d7ba7d",
    "gitDecoration.untrackedResourceForeground": "#d7ba7d",
    "gitDecoration.ignoredResourceForeground": "#808080",
    "gitDecoration.conflictingResourceForeground": "#d16969",
    "terminal.background": "#1e1e1e",
    // "terminal.foreground": "#d4d4d4",
    "terminal.ansiBlack": "#808080",
    "terminal.ansiBrightBlack": "#808080",
    "terminal.ansiRed": "#d16969",
    "terminal.ansiBrightRed": "#d16969",
    "terminal.ansiBlue": "#569cd6",
    "terminal.ansiBrightBlue": "#569cd6",
    "terminal.ansiGreen": "#608b4e",
    "terminal.ansiBrightGreen": "#608b4e",
    "terminal.ansiCyan": "#4ec9b0",
    "terminal.ansiBrightCyan": "#4ec9b0",
    "terminal.ansiYellow": "#d7ba7d",
    "terminal.ansiBrightYellow": "#ce9178",
    "terminal.ansiMagenta": "#c586c0",
    "terminal.ansiBrightMagenta": "#c586c0",
    "terminal.ansiWhite": "#d4d4d4",
    "terminal.ansiBrightWhite": "#d4d4d4",
    "terminal.selectionBackground": "#add6ff26",
    "terminalCursor.foreground": "#808080",
    "statusBar.background": "#303030",
    "statusBar.noFolderBackground": "#303030",
    "statusBar.debuggingBackground": "#303030"
  },
  "projectManager.showProjectNameInStatusBar": false,
  "dateTime.customFormat": "   hh:mm a  ",
  "material-icon-theme.showUpdateMessage": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "colorize.languages": [
    "css",
    "sass",
    "scss",
    "less",
    "stylus",
    "xml",
    "svg",
    "json",
    "javascript",
    "yaml"
],
"colorize.files_extensions": [
  ".js"
],
"todohighlight.include": [
  "**/*.go",
  "**/*.js",
  "**/*.jsx",
  "**/*.json",
  "**/*.ts",
  "**/*.tsx",
  "**/*.html",
  "**/*.php",
  "**/*.css",
  "**/*.scss"
],
"todohighlight.defaultStyle": {
  "color": "#1e1e1e",
  "backgroundColor": "#608b4e",
  "overviewRulerColor": "#608b4e",
  // "cursor": "pointer",
  "border": "0px",
  // "borderRadius": "2px",
  "isWholeLine": false,
},
"todohighlight.keywords": [
  "DEBUG:",
  "REVIEW:",
  "TODO:",
  {
    "text": "TODO:",
    "color": "#1e1e1e",
    "border": "0px",
    // "borderRadius": "2px", //NOTE: using borderRadius along with `border` or you will see nothing change
    "backgroundColor": "#608b4e",
  },
],
"workbench.iconTheme": "file-icons",
"javascript.suggestionActions.enabled": false,
"docker-explorer.showAzureRegistries": false,
"docker-explorer.showSuggestedDockerImages": false,
"msbuildProjectTools": {
  "logging": {
    "level": "Information",
    "seq": {},
    "file": "",
    "trace": false
  },
  "language": {
    "disableFeature": {},
    "useClassicProvider": false,
    "disable": {
      "hover": false
    }
  },
  "nuget": {
    "newestVersionsFirst": true,
    "includePreRelease": true,
    "disablePrefetch": false
  },
  "schemaVersion": 1
},
"importCost.largePackageColor":  "#d16969",
"importCost.mediumPackageColor": "#ce9178",
"importCost.smallPackageColor":  "#608b4e",
"importCost.mediumPackageSize": 100,  // Upper size limit, in KB, that will count a package as a medium package
"importCost.smallPackageSize": 50,    // Upper size limit, in KB, that will count a package as a small package
"importCost.typescriptExtensions": [  // File extensions to be parsed by the Typescript parser
  "\\.tsx?$"
],
"vsicons.projectDetection.disableDetect": true,
"workbench.colorTheme": "dark-plus-syntax",
}

