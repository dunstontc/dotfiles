{ 
    "macros.allMacros": {
        "newMacro": ["Events!", "More Events!!"],
        "when": "editorTextFocus",

        "bsPlus"  : ["deleteAllLeft", "deleteLeft"],
        "bsPlus2" : ["cursorHome", "deleteAllLeft", "deleteLeft"],
        "downLeft": ["cursorDownSelect", "cursorEnd"],
        "downRightPaste": ["cursorDownSelect", "cursorEnd", "editor.action.clipboardPasteAction"],
        "downLeftPaste" : ["cursorDownSelect", "cursorHome", "editor.action.clipboardPasteAction"],
        "newFileCorrectly": ["workbench.view.explorer", "explorer.newFile"],
        
        "wrapTagLI": ["editor.action.clipboardCopyAction", {
            "command": "type",
            "args": {
                "text": "<li></li"
            }
        }, "cursorLeft", "cursorLeft", "cursorLeft", "cursorLeft", "editor.action.clipboardPasteAction"],
        "wrapTagI": ["editor.action.clipboardCopyAction", {
            "command": "type",
            "args": {
                "text": "<i></i"
            }
        }, "cursorLeft", "cursorLeft", "cursorLeft", "editor.action.clipboardPasteAction"],
        "wrapTagU": ["editor.action.clipboardCopyAction", {
            "command": "type",
            "args": {
                "text": "<u></u"
            }
        }, "cursorLeft", "cursorLeft", "cursorLeft", "editor.action.clipboardPasteAction"],
        "wrapTagCode": ["editor.action.clipboardCopyAction", {
            "command": "type",
            "args": {
                "text": "<code></code"
            }
        }, "cursorLeft", "cursorLeft", "cursorLeft", "cursorLeft", "cursorLeft", "cursorLeft", "editor.action.clipboardPasteAction"],
        "wrapTag": ["editor.action.clipboardCopyAction", {
            "command": "type",
            "args": {
                "text": "<></"
            }
        }, "cursorLeft", "cursorLeft", "editor.action.clipboardPasteAction"]
    }
}